CREATE OR REPLACE FUNCTION fibonacci(n IN INTEGER) RETURN INTEGER IS
    a INTEGER := 0;
    b INTEGER := 1;
    temp INTEGER;
BEGIN
    IF n = 0 THEN
        RETURN a;
    ELSIF n = 1 THEN
        RETURN b;
    ELSE
        FOR i IN 2..n LOOP
            temp := a + b;
            a := b;
            b := temp;
        END LOOP;
        RETURN b;
    END IF;
END fibonacci;
/

DECLARE
    limit INTEGER := 10; 
    fib_num INTEGER;
BEGIN
    FOR i IN 0..limit-1 LOOP
        fib_num := fibonacci(i);  
        DBMS_OUTPUT.PUT_LINE('Fibonacci(' || i || ') = ' || fib_num);
    END LOOP;
END;
/
